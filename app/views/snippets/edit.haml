.container
  %h1 Edit your snippet
  = form_for @snippet do |f|
    .form-group
      %label
      = f.text_field :title, :class => "form-control"
    .form-group
      = f.text_area :content, :class => "form-control", :rows => 8
    .form-group
      = f.submit "Update", :class => "btn btn-default"
