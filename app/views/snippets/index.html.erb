<% if user_signed_in? %>
  <div class="container">
    <%= button_to "New snippet", new_snippet_path, :method => :get, :class => "btn btn-primary" %>
  </div>
  <br>
<% end %>

<div class="container">
  <% @snippets.each do |snippet| %>
    <div class="panel panel-default">
      <div class="panel-heading clearfix">
        <div class="panel-title pull-left">
          <%= snippet.title %>
          <br>
          <% if snippet.user %>
            <div style="color: gray"><%= snippet.user.username %></div>
          <% end %>
        </div>
        <% if user_signed_in? %>
          <div class="btn-group pull-right">
            <%= button_to "Edit", edit_snippet_path(snippet.id), :method => :get, :class => "btn btn-default" %>
          </div>
        <% end %>
      </div>
      <div class="panel-body"><%= snippet.content %></div>
      <div class="panel-footer">
        <% snippet.comments.each do |comment| %>
         <div><%= comment.content %></div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
